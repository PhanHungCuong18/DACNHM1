<body>
    <header id="home">
        <nav>
            <a href="#home"><img class="logo" src="~/Image/logo.png" alt="logo"></a>
            <ul class="main-nav">
                <!-- unordered list -->
                <!-- list item -->
                <li><a href="#about">GIỚI THIỆU</a></li>
                <li><a href="#products">ĐƠN VỊ MÁU</a></li>
                <li><a href="#sponsors">TIN TỨC</a></li>
                <li><a href="#about">TRA CỨU</a></li>
                <li><a href="#contact">LIÊN HỆ</a></li>
                
                <li>
                    @if (Session["Taikhoan"] != null)
                    {
                        <a href="@Url.Action("TTTK","User", new {id=  Session["id"] })">THÔNG TIN TÀI KHOẢN</a>
                    }
                    else
                    {
                        <a href="#"></a>
                    }
                </li>
                <li>
                    @if (Session["TaiKhoan"] != null)
                    {
                        @*<a href="#" style="font-weight:bold">Xin Chào: @Session["tk"] </a>*@
